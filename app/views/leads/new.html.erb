<h1>New Lead</h1>
<%= form_tag "/users/#{ @user.id }/leads", method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :job_title %>
    <%= text_field_tag :job_title %>
  </div>
  <div>
    <%= label_tag :company %>
    <%= text_field_tag :company %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :phone %>
    <%= text_field_tag :phone %>
  </div>
  <div>
    <%= label_tag :notes %>
    <%= text_area_tag :notes %>
  </div>
  <div>
    <%= label_tag :date, "Date LinkedIn Invite Sent" %>
    <%= datetime_select(:date, default: Time.zone.now) %>
  </div>
  <div>
    <%= submit_tag "Submit" %>
  </div>
<% end %>
